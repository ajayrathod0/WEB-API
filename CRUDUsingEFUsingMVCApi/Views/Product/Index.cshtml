@*@model IEnumerable<CRUDUsingEFUsingMVCApi.Models.Product>*@

@using PagedList
@using PagedList.Mvc
@model IPagedList<CRUDUsingEFUsingMVCApi.Models.Product>
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div style="float:right">
    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
    {
       <input type="search" name="search" value='@Request.QueryString["search"]' >
            <input type="submit" value="search" class="btn btn-sm btn-primary" />
     
    }
</div>


<table class="table display" id="table" style="width:100%">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Name)*@
                @Html.ActionLink("Name", "Index", new { sort = ViewBag.NameSort })
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Price)*@
                @Html.ActionLink("Price", "Index", new { sort = ViewBag.PriceSort })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AvailableQuantity)*@
                @Html.ActionLink("AvailableQuantity", "Index", new { sort = ViewBag.AvailableQuantity })
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.CategoryId)*@
                @Html.ActionLink("CategoryId", "Index", new { sort = ViewBag.CategoryId })
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>

        </tbody>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index",
    new
    {
        Page = page
    }),
    new PagedListRenderOptions()
    {
        Display = PagedListDisplayMode.IfNeeded,
        DisplayItemSliceAndTotal = true
    })


<script>
    $(document).ready(function () {
        $('#table').DataTable({
            paging: false,
            searching: false,
            language: {
                info: " "
            }
        });
    });
</script>

















